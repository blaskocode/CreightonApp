generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cycle {
  id           Int           @id @default(autoincrement())
  startDate    DateTime
  endDate      DateTime?
  observations Observation[]
}

model Observation {
  id           Int      @id @default(autoincrement())
  cycle        Cycle    @relation(fields: [cycleId], references: [id])
  cycleId      Int
  dayNumber    Int
  date         String
  observation  String?
}
